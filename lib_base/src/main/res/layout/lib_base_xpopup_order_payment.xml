<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="530dp"
    android:orientation="vertical"
    android:background="@drawable/lib_base_shape_order_payment_bg1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认付款"
            android:textSize="@dimen/sp17"
            android:textColor="@color/color_333333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>

        <ImageView
            android:id="@+id/imageClose"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:src="@mipmap/lib_base_icon_close"
            android:layout_marginEnd="@dimen/dp_11"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="¥199.99"
        android:textColor="@color/color_333333"
        android:textSize="40sp">
    </TextView>

    <TextView
        android:id="@+id/textDescribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp14">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="@dimen/margin_edge"
        android:text="支付方式"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp14">
    </TextView>

    <TextView
        android:id="@+id/textAlipay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/dp_4"
        android:drawableStart="@mipmap/lib_base_icon_zhifubao"
        android:drawableEnd="@drawable/lib_base_selector_order_payment"
        android:drawablePadding="@dimen/dp_16"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_edge"
        android:paddingEnd="@dimen/margin_edge"
        android:text="支付宝支付"
        android:textColor="#ff262626"
        android:textSize="@dimen/sp15">
    </TextView>

    <TextView
        android:id="@+id/textWeChat"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:drawableStart="@mipmap/lib_base_icon_wechat"
        android:drawableEnd="@drawable/lib_base_selector_order_payment"
        android:drawablePadding="@dimen/dp_16"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_edge"
        android:paddingEnd="@dimen/margin_edge"
        android:text="微信支付"
        android:textColor="#ff262626"
        android:textSize="@dimen/sp15">
    </TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textPayment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="立即付款"
            android:textSize="@dimen/sp17"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="44dp"
            android:layout_marginLeft="@dimen/margin_edge"
            android:layout_marginRight="@dimen/margin_edge"
            android:background="@drawable/lib_base_shape_order_payment_bg2">
        </TextView>

    </FrameLayout>

</LinearLayout>
