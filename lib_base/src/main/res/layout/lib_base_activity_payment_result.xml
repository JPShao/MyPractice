<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pay.activity.PaymentResultActivity">

    <ImageView
        android:id="@+id/viewBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_252"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/lib_base_selector_payment_result3">
    </ImageView>

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/dp_31"
        android:layout_height="@dimen/dp_31"
        android:src="@mipmap/icon_back_white"
        android:layout_marginStart="@dimen/dp_11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewHint"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHint">
    </ImageView>

    <TextView
        android:id="@+id/textViewHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="支付结果"
        android:textSize="@dimen/sp17"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/textPayResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text=""
        android:textSize="@dimen/sp17"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/lib_base_selector_payment_result"
        android:drawablePadding="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutGoodsInfo"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_245"
        android:background="@drawable/lib_base_selector_payment_result2"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textViewRealMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付金额"
            android:textSize="@dimen/sp15"
            android:textColor="@color/color_999999"
            android:layout_marginTop="@dimen/dp_33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>
        <TextView
            android:id="@+id/textRealMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=""
            android:textSize="40sp"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dp_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRealMoney">
        </TextView>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/roundedImageView"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_88"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </com.makeramen.roundedimageview.RoundedImageView>
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=""
            android:textSize="@dimen/sp15"
            android:textColor="@color/color_333333"
            android:layout_marginStart="@dimen/dp_16"
            app:layout_constraintTop_toTopOf="@+id/roundedImageView"
            app:layout_constraintStart_toEndOf="@+id/roundedImageView">
        </TextView>
        <TextView
            android:id="@+id/textProductMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=""
            android:textSize="@dimen/sp22"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dp_19"
            app:layout_constraintStart_toStartOf="@+id/textTitle"
            app:layout_constraintTop_toBottomOf="@+id/textTitle">
        </TextView>
        <TextView
            android:id="@+id/textSpec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sp22"
            android:textColor="@color/color_999999"
            android:layout_marginStart="@dimen/dp_9"
            app:layout_constraintTop_toTopOf="@+id/textProductMoney"
            app:layout_constraintBottom_toBottomOf="@+id/textProductMoney"
            app:layout_constraintStart_toEndOf="@+id/textProductMoney">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutPaySuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_edge"
        android:paddingRight="@dimen/margin_edge"
        android:layout_marginTop="@dimen/dp_36"
        app:layout_constraintTop_toBottomOf="@+id/layoutGoodsInfo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textLookOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="165"
                android:gravity="center"
                android:textStyle="bold"
                android:text="查看订单"
                android:textSize="@dimen/sp15"
                android:textColor="@color/white"
                android:background="@drawable/lib_base_shape_payment_result_bg1">
            </TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13">
            </View>
            <TextView
                android:id="@+id/textTelService"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="165"
                android:gravity="center"
                android:textStyle="bold"
                android:text="在线咨询客服"
                android:textSize="@dimen/sp15"
                android:textColor="@color/colorAccent"
                android:background="@drawable/lib_base_shape_payment_result_bg2">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服电话"
                android:textSize="@dimen/sp12"
                android:textColor="@color/color_999999">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="@string/lib_base_service_tel"
                android:textSize="@dimen/sp12"
                android:textColor="@color/colorAccent">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutPayFail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_edge"
        android:paddingRight="@dimen/margin_edge"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintTop_toBottomOf="@+id/layoutGoodsInfo">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/lib_base_payment_result_hint"
            android:textSize="@dimen/sp14"
            android:textColor="@color/colorAccent"
            android:background="@drawable/lib_base_shape_payment_result_bg3">
        </TextView>
        <TextView
            android:id="@+id/textRepayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="重新支付"
            android:textSize="@dimen/sp15"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_21"
            android:background="@drawable/lib_base_shape_payment_result_bg1">
        </TextView>
        <TextView
            android:id="@+id/textLookOrder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="查看订单"
            android:textSize="@dimen/sp15"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/lib_base_shape_payment_result_bg2">
        </TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>