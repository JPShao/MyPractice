<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lib_base_shape_auth_popup_bg1"
    android:orientation="vertical">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        app:riv_corner_radius_top_left="@dimen/dp_8"
        app:riv_corner_radius_top_right="@dimen/dp_8"
        android:src="@mipmap/lib_base_icon_auth_header"
        android:scaleType="centerCrop">
    </com.makeramen.roundedimageview.RoundedImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您还未实名认证"
        android:textColor="#ff333333"
        android:textSize="17sp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="需要立即去进行实名认证吗？"
        android:textColor="#ff333333"
        android:textSize="15sp"
        />
    <LinearLayout
        android:layout_marginTop="42dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/lib_base_shape_auth_popup_bg2"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textCancel"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:textColor="#ff0052fe"
            android:textSize="17sp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textAuth"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="去实名认证"
            android:textColor="#ff0052fe"
            android:textSize="17sp"
            />
    </LinearLayout>
</LinearLayout>